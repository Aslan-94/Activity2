@model Activity2_training.Models.TicketModel

<h4>Search Form</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchResult">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Search for a Passenger Name</label>

                <input name="searchTerm" class="form-control" />
